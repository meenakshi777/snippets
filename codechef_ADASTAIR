import math
t=int(input())
for i in range(t):
    n,k=map(int,input().split())
    stairs=list(map(int,input().split()))
    count=0
    f=stairs[0]
    if(f>k):
        if(f%k==0):
            count=count+int(f/k)-1
        else:
            count=count+math.floor(f/k)
    for j in range(n-1):
        f=stairs[j+1]-stairs[j]
        if(f>k):
            if(f%k==0):
                count=count+int(f/k)-1
            else:
                count=count+math.floor(f/k)
    print(count)
